// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pet {
  id           String @id @default(uuid())
  name         String
  about        String
  size         Int
  energy       Int
  independency Int
  requisite    String @default("")
  age          Int
  environment  Int
  phone        String

  // address
  street       String?
  number       String?
  state        String? @db.VarChar(2)
  cep          String?
  neighborhood String?
  city         String?

  @@map("pets")
}
